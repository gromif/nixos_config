    { device = "/dev/mapper/luks-f7cc99d3-8e18-40ac-a3c0-8532042c055e";
      fsType = "btrfs";
      options = [ "nodev" "nosuid" "noexec" "relatime"
      		"x-gvfs-name=Drive%20A" "x-gvfs-show" "x-systemd.automount" 
